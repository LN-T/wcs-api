{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-center">Recipes list</h1>

    {% if error is defined %}
        <div class="text-center">
            <br>
            <img src="https://images.pexels.com/photos/544962/pexels-photo-544962.jpeg?w=1260&h=750&dpr=2&auto=compress&cs=tinysrgb" width="50%">
            <br>
            <p>This recipe/ingredient is not on our database! <a href="{{ path('index') }}"> Try again!</a></p>
        </div>
    {% else %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Ingredients</th>
                <th>Recipe details</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td><img src="{{ recipe.image_url }}" height="100px" width="150px"></td>
                    <td>{{ recipe.title }}</td>
                    <td><a href="{{ path('food_ingredient', { 'id': recipe.recipe_id }) }}">Ingredients</a></td>
                    <td><a href="{{ recipe.source_url }}" target="_blank">Details</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock body %}