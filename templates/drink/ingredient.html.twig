{% extends 'base.html.twig' %}

{% block body %}

    <div class="text-center">
        <h1 class="text-center">Ingredients list</h1>
        <br>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-12 col-lg-6">
        {% for drink in drinks %}
            {% for video in drink.videos %}
                {% if video.type == 'assets' %}
                    <div class="text-center">
                        <video width="400" height="300" controls>
                            <source src="{{ 'http://assets.absolutdrinks.com/videos/' ~ drink.id ~ '.mp4' }}" type="video/mp4">
                        </video>
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
        </div>
        <div class="col-xs-12 col-lg-6">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Name</th>
                </tr>
                </thead>
                <tbody>
                    {% for drink in drinks %}
                        {% for key, ingredient in drink.ingredients %}
                            <tr>
                                <td>{{ ingredient.textPlain }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock body %}