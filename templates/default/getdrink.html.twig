{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-center">Drinks list</h1>

    {% if error is defined %}
        <div class="text-center">
            <br>
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqg0GBy4oxNYmIuVJbmFzZEmFSElLli54Y04-Y3HDlMIByw9Djyg" width="25%">
            <br>
            <p>This drink/ingredient is not on our database! <a href="{{ path('index') }}"> Try again!</a></p>
        </div>
    {% else %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Ingredients</th>
                </tr>
            </thead>
            <tbody>
                {% for drink in drinks %}
                    <tr>
                        <td><img src="{{ 'http://assets.absolutdrinks.com/drinks/300x400/' ~ drink.id ~ '(50).jpg' }}" height="150px" width="100px"></td>
                        <td>{{ drink.name }}</td>
                        <td><a href="{{ path('getingredient', { 'id': drink.id }) }}">Ingredients</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock body %}